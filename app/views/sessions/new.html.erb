<div class="container">
  <%= form_tag sessions_path, class: "form-signin" do %>
    <h2 class="form-signin-heading">Please sign in</h2>
    <% if flash[:error] %>
      <div class="alert alert-danger alert-sm"><%= flash[:error] %></div>
    <% end %>
    <div class="field">
      <%= text_field_tag :username, params[:username], class: "form-control", placeholder: "Username" %>
    </div>
    <div class="field">
      <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="actions"><%= submit_tag "Log in", class: "btn btn-lg btn-primary btn-block" %></div>
  <% end %>
</div>
