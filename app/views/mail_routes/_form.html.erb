<%= semantic_form_for @mail_route do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :company %>
    <%= f.input :transport_type %>
    <%= f.input :maximum_weight %>
    <%= f.input :maximum_volume %>
    <%= f.input :priority %>
    <%= f.input :cost_per_weight %>
    <%= f.input :cost_per_volume %>
    <%= f.input :price_per_weight %>
    <%= f.input :price_per_volume %>
    <%= f.input :origin_id, as: :string, wrapper_html: {class: "autocomplete-origin", data: { auto: Place.all.map(&:name) } }, input_html: { class: "autocomplete-origin", value: @mail_route.origin.try(:name) } %>
    <%= f.input :destination_id, as: :string, input_html: { class: "autocomplete-destination", value: @mail_route.destination.try(:name) } %>
    <%= f.input :duration %>
    <%= f.input :frequency %>
    <%= f.input :start_date %>
  <% end %>
  <%= f.actions %>
<% end %>
