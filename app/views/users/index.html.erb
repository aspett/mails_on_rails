<h1>User#index</h1>
<p>Find me in app/views/user/index.html.erb</p>
<%= link_to "Create User", new_user_path, class: "btn btn-primary" %>
<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.username %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to "Remove", user_path(user), method: :delete, class: "btn btn-danger btn-xs" %>
        <% if user.is_manager? %>
          <%= link_to "Demote", demote_user_path(user), method: :put, class: "btn btn-warning btn-xs" %>
        <% else %>
          <%= link_to "Promote", promote_user_path(user), method: :put, class: "btn btn-warning btn-xs" %>
        <% end %>
  </td>
    </tr>
  <% end %>
  </tbody>
</table>
